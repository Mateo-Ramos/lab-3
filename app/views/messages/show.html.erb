<h1 class="text-info mb-4 border-bottom pb-2">Message Details</h1>

<div class="mb-4">
  <p><strong>ID:</strong> <%= @message.id %></p>
  <p><strong>Sender:</strong> <%= @message.user.first_name %> <%= @message.user.last_name %></p>
  <p><strong>Chat ID:</strong> <%= @message.chat.id %></p>
  <p><strong>Body:</strong> <%= @message.body %></p>
</div>

<div class="d-flex flex-wrap gap-2 mb-4">
  <%= link_to "View User", user_path(@message.user), class: "btn btn-outline-light btn-sm" %>
  <%= link_to "View Chat", chat_path(@message.chat), class: "btn btn-outline-light btn-sm" %>
</div>

<div class="d-flex gap-2">
  <%= link_to "Back to Messages", messages_path, class: "btn btn-secondary" %>
  <%= link_to "Edit Message", edit_message_path(@message), class: "btn btn-primary" %>
</div>
