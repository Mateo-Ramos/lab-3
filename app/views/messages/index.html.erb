<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3 px-3">
    <h1 class="text-info m-0">Your Messages</h1>
    <%= link_to "New Message", new_message_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive px-3 mb-5">
    <table class="table table-dark table-bordered table-striped rounded shadow-sm overflow-hidden">
      <thead class="table-light text-center">
        <tr>
          <th>ID</th>
          <th>Chat ID</th>
          <th>Body</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= message.id %></td>
            <td><%= message.chat_id %></td>
            <td><%= message.body %></td>
            <td>
              <%= link_to 'Show', message_path(message), class: "btn btn-outline-info btn-sm me-2" %>
              <%= link_to 'Edit', edit_message_path(message), class: "btn btn-outline-warning btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
