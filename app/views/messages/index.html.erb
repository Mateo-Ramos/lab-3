<h1>Messages</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.body %></td>
        <td><%= message.created_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= link_to 'Show', message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
