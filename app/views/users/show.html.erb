<h1 class="text-info mb-4 border-bottom pb-2">User Details</h1>

<div class="mb-4">
  <p><strong>Full Name:</strong> <%= "#{@user.first_name} #{@user.last_name}" %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>
</div>

<h2 class="text-warning border-bottom pb-1">Chats as Sender</h2>
<ul class="mb-4">
  <% @user.sent_chats.each do |chat| %>
    <li>
      Chat ID: <%= chat.id %> |
      Receiver ID: <%= chat.receiver_id %> |
      <%= link_to "View", chat_path(chat), class: "btn btn-outline-light btn-sm ms-2" %>
    </li>
  <% end %>
</ul>

<h2 class="text-warning border-bottom pb-1">Chats as Receiver</h2>
<ul class="mb-4">
  <% @user.received_chats.each do |chat| %>
    <li>
      Chat ID: <%= chat.id %> |
      Sender ID: <%= chat.sender_id %> |
      <%= link_to "View", chat_path(chat), class: "btn btn-outline-light btn-sm ms-2" %>
    </li>
  <% end %>
</ul>

<h2 class="text-warning border-bottom pb-1">Messages Sent</h2>
<ul class="mb-4">
  <% @user.messages.each do |message| %>
    <li>
      Chat ID: <%= message.chat_id %> |
      Body: <%= message.body %> |
      <%= link_to "View", message_path(message), class: "btn btn-outline-light btn-sm ms-2" %>
    </li>
  <% end %>
</ul>

<div class="d-flex gap-2 mt-4">
  <%= link_to 'Back to Users', users_path, class: "btn btn-secondary" %>
  <%= link_to 'Edit User', edit_user_path(@user), class: "btn btn-primary" %>
</div>
